<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd
                        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">
    <changeSet id="1" author="rachetii">
        <createSequence sequenceName="products_seq" startValue="100" incrementBy="1"/>
    </changeSet>

    <changeSet id="2" author="rachetii">
        <createTable tableName="products">
            <column name="id" type="bigint">
                <constraints primaryKey="true" nullable="false" />
            </column>
            <column name="price" type="DECIMAL(4,2)">
                <constraints nullable="false"/>
            </column>
            <column name="name" type="varchar(128)">
                <constraints nullable="false" />
            </column>
            <column name="quantity" type="bigint">
                <constraints nullable="false" />
            </column>
            <column defaultValueComputed="CURRENT_TIMESTAMP"  name="expire_date"  type="TIMESTAMP">
                <constraints nullable="false" />
            </column>
            <column name="sku" type="varchar(128)">
                <constraints nullable="false" />
            </column>
            <column name="code" type="varchar(128)">
                <constraints nullable="false" />
            </column>
        </createTable>
    </changeSet>

    <changeSet id="3" author="rachetii">
        <loadData
                file="classpath:db/changelog/data/products.csv"
                separator=";"
                tableName="products">
            <column name="id" type="numeric"/>
            <column name="price" type="numeric"/>
            <column name="name" type="string"/>
            <column name="quantity" type="numeric"/>
            <column name="expire_date" type="datetime"/>
            <column name="sku" type="string"/>
            <column name="code" type="string"/>
        </loadData>
    </changeSet>
</databaseChangeLog>