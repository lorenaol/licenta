<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd
                        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">
    <changeSet id="1" author="rachetii">
        <createSequence sequenceName="shopping_cart_seq" startValue="50" incrementBy="1"/>
    </changeSet>

    <changeSet id="2" author="rachetii">
        <createTable tableName="shopping_cart">
            <column name="id" type="bigint">
                <constraints primaryKey="true" nullable="false" />
            </column>

            <column name="user_id" type="bigint">
                <constraints foreignKeyName="shopping_cart_user_fk" references="users(id)"
                             nullable="false" />
            </column>
            <column name="product_id" type="bigint">
                <constraints foreignKeyName="shopping_cart_product_fk" references="products(id)"
                             nullable="false" />
            </column>
        </createTable>
    </changeSet>

    <changeSet id="3" author="rachetii">
        <loadData
                file="classpath:db/changelog/data/shopping_cart.csv"
                separator=";"
                tableName="shopping_cart">

            <column name="id" type="numeric"/>
            <column name="user_id" type="numeric"/>
            <column name="product_id" type="numeric"/>
        </loadData>
    </changeSet>
</databaseChangeLog>